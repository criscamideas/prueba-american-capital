#EditorConfig helps developers define and maintain consistent coding styles between different editors and IDEs
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

[*.{json,css,scss,html}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
